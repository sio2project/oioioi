@media screen and (min-width: 720px){
  #jane-street-logo {
    width: 20%;
  }
}

@media screen and (min-width: 540px) and (max-width: 720px) {
  #jane-street-logo {
    width: 30%;
  }
}

@media screen and (min-width: 360px) and (max-width: 540px){
  #jane-street-logo {
    width: 40%;
  }
}

@media screen and (max-width: 360px){
  #jane-street-logo {
    width: 50%;
  }
}
